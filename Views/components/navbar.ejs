    </div>
  </a>
  <div id="nav">
    <div class="accordion p-2 accordion-flush " id="accordionExample">
      <% if(userLoggedIn) {%>
        <div class="accordion-item ">
          <h2 class="accordion-header ">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
              <i class="fa-solid fa-list-check pe-1"></i>
              รายการจอง
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <ul class="list-unstyled">
                <li><a class="dropdown-item" href="/manage">ภายในจังหวัด</a></li>
              </ul>
              <ul class="list-unstyled">
                <li>
                  <% manuals.slice(2,3).forEach((manual, index)=> { %>
                    <% if (manual.file !==null || manual.link !==null) { %>
                      <% let attachment %>
                        <% if(manual.file===null) { attachment=manual.link } else if(manual.link===null)
                          {attachment=`/${manual.file}` } %>
                          <a class="dropdown-item" href="<%= attachment %>" target="_blank">
                            <%= manual.title %>
                          </a>
                          <% } %>
                            <% }) %>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <% if(user.role==="admin" ) {%>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <i class="fa-solid fa-gear pe-1"></i>
                ตั้งค่าระบบ
              </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <ul class="list-unstyled">
                  <li><a class="dropdown-item" href="/setting/car">ยานพาหนะ</a></li>
                </ul>
                <ul class="list-unstyled">
                  <li><a class="dropdown-item" href="/setting/member">สมาชิก</a></li>
                </ul>
                <ul class="list-unstyled">
                  <li><a class="dropdown-item" href="/setting/edit-manual">เอกสารภายในระบบ
                    </a></li>
                </ul>
              </div>
            </div>
          </div>
          <% } %>
            <% } %>
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <i class="fa-solid fa-file pe-1"></i>
                    เอกสาร
                  </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                  <div class="accordion-body">
                    <ul class="list-unstyled">
                      <li><a class="dropdown-item" href="/document">เอกสารทั้งหมด</a></li>
                    </ul>


                  </div>
                </div>
              </div>
    </div>
  </div>
  </div>
