<nav id="mySidenav" class="sidenav">
  <a href="<%= userLoggedIn && user.role !== 'user'?'/dashboard':'/manage' %>" class="nav-link">
    <div id="brand">
      <img src="/image/Mae-Fah-Luang-University-2.png" alt="Mae Fah Luang University">
      <div class="text">ระบบจองรถยนต์ออนไลน์</div>
