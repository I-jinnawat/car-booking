                </div>
                <div class="middle-column">
                    <p><strong>เบอร์โทร:</strong></p>
                    <p>
                        <%= mobile_number_driver %>
                    </p>

                </div>
            </div>
        </div>
        <hr>
        <!-- ส่วนล่าง -->
        <div class="section footer">
            <div class="footer-left">
                <div class="footer-column">
